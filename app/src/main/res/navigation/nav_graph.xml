<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/landing_screen_fragment">

    <fragment
        android:id="@+id/landing_screen_fragment"
        android:name="com.decagonhq.clads.ui.view.LandingScreenFragment"
        android:label="fragment_landing_screen"
        tools:layout="@layout/fragment_landing_screen" >
        <action
            android:id="@+id/action_landingScreenFragment_to_signUpOptionsFragment"
            app:destination="@id/sign_up_options_fragment" />
    </fragment>
    <fragment
        android:id="@+id/sign_up_options_fragment"
        android:name="com.decagonhq.clads.ui.view.SignUpOptionsFragment"
        android:label="fragment_sign_up_options"
        tools:layout="@layout/fragment_sign_up_options" >
        <action
            android:id="@+id/action_signUpOptionsFragment_to_emailSignUpFragment"
            app:destination="@id/email_sign_up_fragment" />
        <action
            android:id="@+id/action_signUpOptionsFragment_to_loginFragment"
            app:destination="@id/login_fragment" />
    </fragment>
    <fragment
        android:id="@+id/email_sign_up_fragment"
        android:name="com.decagonhq.clads.ui.view.EmailSignUpFragment"
        android:label="fragment_email_sign_up"
        tools:layout="@layout/fragment_email_sign_up" >
        <action
            android:id="@+id/action_emailSignUpFragment_to_emailConfirmationFragment"
            app:destination="@id/email_confirmation_fragment" />
        <action
            android:id="@+id/action_emailSignUpFragment_to_loginFragment"
            app:destination="@id/login_fragment" />
        <argument
            android:name="firstName"
            app:argType="string" />
        <argument
            android:name="lastName"
            app:argType="string" />
        <argument
            android:name="email"
            app:argType="string" />
    </fragment>
    <fragment
        android:id="@+id/email_confirmation_fragment"
        android:name="com.decagonhq.clads.ui.view.EmailConfirmationFragment"
        android:label="fragment_email_confirmation"
        tools:layout="@layout/fragment_email_confirmation" >
        <action
            android:id="@+id/action_emailConfirmationFragment_to_loginFragment"
            app:destination="@id/login_fragment" />
    </fragment>
    <fragment
        android:id="@+id/login_fragment"
        android:name="com.decagonhq.clads.ui.view.LoginFragment"
        android:label="fragment_login"
        tools:layout="@layout/fragment_login" >
        <action
            android:id="@+id/action_loginFragment_to_forgotPasswordFragment"
            app:destination="@id/forgot_password_fragment" />
        <action
            android:id="@+id/action_loginFragment_to_dashboardFragment"
            app:destination="@id/dashboard_fragment" />
    </fragment>
    <fragment
        android:id="@+id/reset_password_fragment"
        android:name="com.decagonhq.clads.ui.view.ResetPasswordFragment"
        android:label="fragment_reset_password"
        tools:layout="@layout/fragment_reset_password" >
        <action
            android:id="@+id/action_resetPasswordFragment_to_loginFragment"
            app:destination="@id/login_fragment" />
        <action
            android:id="@+id/action_resetPasswordFragment_to_loginFragment2"
            app:destination="@id/login_fragment" />
    </fragment>
    <fragment
        android:id="@+id/confirm_password_reset_fragment"
        android:name="com.decagonhq.clads.ui.view.ConfirmPasswordResetFragment"
        android:label="fragment_confirm_password_reset"
        tools:layout="@layout/fragment_confirm_password_reset" >
        <action
            android:id="@+id/action_confirmPasswordResetFragment_to_resetPasswordFragment"
            app:destination="@id/reset_password_fragment" />
    </fragment>
    <fragment
        android:id="@+id/forgot_password_fragment"
        android:name="com.decagonhq.clads.ui.view.ForgotPasswordFragment"
        android:label="fragment_forgot_password"
        tools:layout="@layout/fragment_forgot_password" >
        <action
            android:id="@+id/action_forgotPasswordFragment_to_confirmPasswordResetFragment"
            app:destination="@id/confirm_password_reset_fragment" />
        <action
            android:id="@+id/action_forgotPasswordFragment_to_loginFragment"
            app:destination="@id/login_fragment" />
    </fragment>
    <fragment
        android:id="@+id/dashboard_fragment"
        android:name="com.decagonhq.clads.ui.view.DashboardFragment"
        android:label="fragment_dashboard"
        tools:layout="@layout/fragment_dashboard" />
</navigation>