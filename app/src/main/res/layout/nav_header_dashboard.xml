<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_drawer_dashboard_header"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:backgroundTint="@color/white"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:theme="@style/ThemeOverlay.AppCompat.Dark">

    <ImageView
        android:id="@+id/nav_drawer_profile_avatar_image_view"
        android:layout_width="@dimen/margin_76dp"
        android:layout_height="@dimen/margin_76dp"
        android:layout_marginHorizontal="@dimen/margin_18dp"
        android:layout_marginTop="@dimen/margin_50dp"
        android:contentDescription="@string/nav_header_desc"
        android:paddingTop="@dimen/nav_header_vertical_spacing"
        android:scaleType="fitCenter"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/nav_drawer_profile_avatar" />

    <ImageView
        android:id="@+id/nav_drawer_close_icon_image_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_33dp"
        android:contentDescription="@string/close_icon"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/drawer_close_icon" />

    <TextView
        android:id="@+id/nav_drawer_edit_profile_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_20dp"
        android:background="@drawable/nav_drawer_edit_profile_button_background"
        android:clickable="true"
        android:focusable="true"
        android:fontFamily="@font/poppins_bold"
        android:paddingHorizontal="@dimen/padding_18dp"
        android:paddingVertical="@dimen/padding_6dp"
        android:text="@string/edit_profile"
        android:textColor="@color/white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/nav_drawer_user_full_name_text_view" />

    <TextView
        android:id="@+id/nav_drawer_user_full_name_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_20dp"
        android:fontFamily="@font/roboto_bold"
        android:text="@string/ijeoma_ibukun_babangida"
        android:textColor="@color/navy_blue"
        app:layout_constraintEnd_toEndOf="@+id/nav_drawer_profile_avatar_image_view"
        app:layout_constraintStart_toStartOf="@+id/nav_drawer_profile_avatar_image_view"
        app:layout_constraintTop_toBottomOf="@+id/nav_drawer_profile_avatar_image_view" />

    <View
        android:id="@+id/view"
        android:layout_width="match_parent"
        android:layout_height="@dimen/margin_2dp"
        android:layout_marginHorizontal="@dimen/margin_13dp"
        android:layout_marginTop="@dimen/margin_25dp"
        android:background="@color/text_gray"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/nav_drawer_edit_profile_text_view" />

</androidx.constraintlayout.widget.ConstraintLayout>